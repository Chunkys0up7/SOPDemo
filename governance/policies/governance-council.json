{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Governance Council Structure",
  "description": "Organizational structure for SOP governance including roles, responsibilities, and RBAC framework",
  "version": "1.0.0",
  "effectiveDate": "2025-11-16",
  "aligned_with": [
    "NASA NPR 7123.1B - Systems Engineering Processes",
    "NASA Data Governance Best Practices",
    "ISO 38500 - IT Governance"
  ],

  "governanceCouncil": {
    "description": "Strategic oversight body for SOP management and governance",
    "composition": [
      "Chief Operations Officer (Chairperson)",
      "Data Governance Officers (2)",
      "Department SOP Stewards",
      "Compliance Review Committee",
      "Technical Approval Board"
    ],
    "meetings": {
      "frequency": "Monthly",
      "quorum": "60% of voting members",
      "votingRights": ["COO", "Data Governance Officers", "Department Stewards"]
    },
    "responsibilities": [
      "Approve major SOP framework changes",
      "Review and approve governance policies",
      "Resolve escalated approval disputes",
      "Oversee compliance with regulatory requirements",
      "Approve schema version upgrades (MAJOR versions)",
      "Monitor governance metrics and KPIs"
    ]
  },

  "roles": {
    "dataGovernanceOfficer": {
      "title": "Data Governance Officer",
      "count": 2,
      "reportingTo": "Chief Operations Officer",
      "responsibilities": [
        "Define and maintain data governance policies",
        "Oversee SOP lifecycle management",
        "Coordinate with department stewards",
        "Ensure regulatory compliance",
        "Manage schema versioning strategy",
        "Conduct governance audits"
      ],
      "permissions": {
        "sop": ["read", "create", "update", "delete", "approve_major"],
        "schema": ["read", "update", "version_control"],
        "workflows": ["configure", "approve"],
        "reports": ["generate", "publish"]
      },
      "approvalAuthority": {
        "sopChanges": "All SOPs (final approval)",
        "policyChanges": "All governance policies",
        "workflowChanges": "All workflow configurations",
        "monetaryThreshold": "Unlimited (for compliance decisions)"
      }
    },

    "sopSteward": {
      "title": "SOP Steward",
      "scope": "Department-specific",
      "departments": [
        "Mortgage Finance",
        "Compliance",
        "Operations",
        "Technology",
        "Risk Management"
      ],
      "responsibilities": [
        "Manage department-specific SOPs",
        "Coordinate with SMEs for content updates",
        "Ensure SOPs reflect current practices",
        "Submit SOPs for governance review",
        "Maintain SOP metadata and tags",
        "Track department compliance metrics"
      ],
      "permissions": {
        "sop": ["read", "create", "update", "submit_for_approval"],
        "schema": ["read"],
        "workflows": ["initiate", "track"],
        "reports": ["generate", "view_department"]
      },
      "approvalAuthority": {
        "sopChanges": "Department SOPs (initial approval)",
        "policyChanges": "None (recommendation only)",
        "workflowChanges": "None",
        "monetaryThreshold": "N/A"
      }
    },

    "complianceReviewer": {
      "title": "Compliance Reviewer",
      "count": 3,
      "reportingTo": "Chief Compliance Officer",
      "responsibilities": [
        "Review SOPs for regulatory compliance",
        "Validate compliance framework mappings",
        "Ensure adherence to FHA, TRID, RESPA, SOX requirements",
        "Document compliance verification",
        "Escalate non-compliance issues",
        "Maintain regulatory change log"
      ],
      "permissions": {
        "sop": ["read", "comment", "approve_compliance"],
        "schema": ["read"],
        "workflows": ["review_compliance_step"],
        "reports": ["generate_compliance", "publish"]
      },
      "approvalAuthority": {
        "sopChanges": "Compliance approval (mandatory gate)",
        "policyChanges": "Compliance policies only",
        "workflowChanges": "Compliance checkpoints",
        "monetaryThreshold": "N/A"
      },
      "regulatoryFrameworks": [
        "FHA Handbook 4000.1",
        "TRID (TILA-RESPA Integrated Disclosure)",
        "RESPA (Real Estate Settlement Procedures Act)",
        "SOX (Sarbanes-Oxley Act)",
        "Fannie Mae Selling Guide",
        "Freddie Mac Seller/Servicer Guide"
      ]
    },

    "technicalApprover": {
      "title": "Technical Approver",
      "count": 2,
      "reportingTo": "Chief Technology Officer",
      "responsibilities": [
        "Review technical accuracy of SOPs",
        "Validate system integration procedures",
        "Approve technical implementation details",
        "Ensure technical best practices",
        "Review schema changes for technical impact",
        "Validate automation workflows"
      ],
      "permissions": {
        "sop": ["read", "comment", "approve_technical"],
        "schema": ["read", "propose_changes"],
        "workflows": ["configure", "test"],
        "reports": ["generate_technical", "view"]
      },
      "approvalAuthority": {
        "sopChanges": "Technical approval (for technical SOPs)",
        "policyChanges": "Technical policies only",
        "workflowChanges": "Technical workflows",
        "monetaryThreshold": "N/A"
      }
    },

    "contentAuthor": {
      "title": "Content Author / Subject Matter Expert",
      "scope": "Process-specific",
      "responsibilities": [
        "Create and update SOP content",
        "Ensure procedural accuracy",
        "Collaborate with SOP stewards",
        "Respond to review feedback",
        "Maintain component documentation",
        "Update process flowcharts"
      ],
      "permissions": {
        "sop": ["read", "create_draft", "update_draft"],
        "schema": ["read"],
        "workflows": ["initiate"],
        "reports": ["view_own"]
      },
      "approvalAuthority": {
        "sopChanges": "None (draft only)",
        "policyChanges": "None",
        "workflowChanges": "None",
        "monetaryThreshold": "N/A"
      }
    },

    "viewer": {
      "title": "SOP Viewer",
      "scope": "All employees",
      "responsibilities": [
        "Read and follow SOPs",
        "Provide feedback on SOPs",
        "Report issues or outdated content",
        "Complete SOP training requirements"
      ],
      "permissions": {
        "sop": ["read"],
        "schema": [],
        "workflows": [],
        "reports": []
      },
      "approvalAuthority": {
        "sopChanges": "None",
        "policyChanges": "None",
        "workflowChanges": "None",
        "monetaryThreshold": "N/A"
      }
    }
  },

  "rbacPlaceholder": {
    "note": "RBAC system to be implemented in Phase 4",
    "description": "Role-Based Access Control system integrating with enterprise identity management",
    "futureImplementation": {
      "identityProvider": "Azure AD / Okta",
      "authenticationMethod": "OAuth 2.0 / SAML 2.0",
      "authorizationModel": "Attribute-Based Access Control (ABAC)",
      "features": [
        "Single Sign-On (SSO)",
        "Multi-Factor Authentication (MFA)",
        "Role assignment and inheritance",
        "Dynamic permission evaluation",
        "Audit logging of all access",
        "Automated role provisioning"
      ],
      "integration": {
        "hr_system": "Automatic role assignment based on job title",
        "audit_system": "Real-time access logging",
        "compliance_system": "Segregation of duties enforcement"
      }
    },
    "currentImplementation": {
      "method": "Manual role assignment via configuration",
      "permissions": "Defined in this policy document",
      "enforcement": "Application-level checks",
      "audit": "Manual review of change logs"
    }
  },

  "changeControl": {
    "description": "Change control procedures for governance framework",
    "policyChanges": {
      "minorChanges": {
        "definition": "Clarifications, formatting, non-substantive updates",
        "approvalRequired": ["Data Governance Officer (1)"],
        "notificationRequired": ["Governance Council"],
        "effectiveImmediately": true
      },
      "majorChanges": {
        "definition": "New roles, permission changes, structural modifications",
        "approvalRequired": [
          "Data Governance Officers (both)",
          "Governance Council vote (60% quorum)"
        ],
        "notificationRequired": ["All stakeholders", "C-suite executives"],
        "effectiveAfter": "30 days notice period"
      }
    },
    "reviewCycle": {
      "frequency": "Annual",
      "responsibleParty": "Data Governance Officers",
      "process": [
        "Collect stakeholder feedback",
        "Analyze governance metrics",
        "Propose policy updates",
        "Submit to Governance Council",
        "Approve and publish updates"
      ]
    }
  },

  "metricsAndKPIs": {
    "governanceEffectiveness": [
      {
        "metric": "Average approval cycle time",
        "target": "< 5 business days",
        "measurement": "Time from submission to final approval"
      },
      {
        "metric": "Policy compliance rate",
        "target": "> 95%",
        "measurement": "Percentage of SOPs following governance procedures"
      },
      {
        "metric": "Escalation rate",
        "target": "< 5%",
        "measurement": "Percentage of approvals requiring escalation"
      },
      {
        "metric": "SOP currency",
        "target": "100% reviewed annually",
        "measurement": "Percentage of SOPs reviewed within 12 months"
      }
    ],
    "reportingSchedule": {
      "monthly": "Approval metrics, cycle times",
      "quarterly": "Compliance metrics, escalations",
      "annually": "Full governance assessment, policy review"
    }
  },

  "escalationProcedures": {
    "level1": {
      "trigger": "SOP Steward and Compliance Reviewer disagree",
      "escalateTo": "Data Governance Officer",
      "timeline": "2 business days"
    },
    "level2": {
      "trigger": "Data Governance Officer cannot resolve",
      "escalateTo": "Governance Council",
      "timeline": "5 business days"
    },
    "level3": {
      "trigger": "Governance Council cannot reach consensus",
      "escalateTo": "Chief Operations Officer (final authority)",
      "timeline": "10 business days"
    }
  },

  "complianceRequirements": {
    "mandatory": [
      "All SOPs must have compliance review before approval",
      "Regulatory framework mappings must be current",
      "Audit trail must be maintained for all changes",
      "Annual governance training for all role holders",
      "Quarterly governance council meetings",
      "Documented evidence of approval for all major changes"
    ],
    "auditSchedule": {
      "internal": "Quarterly",
      "external": "Annual",
      "responsibleParty": "Internal Audit Department"
    }
  },

  "metadata": {
    "documentOwner": "Data Governance Officers",
    "approvedBy": "Governance Council",
    "approvalDate": "2025-11-16",
    "nextReview": "2026-11-16",
    "version": "1.0.0",
    "status": "Active"
  }
}
