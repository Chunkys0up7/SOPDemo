{
  "name": "sop-ecosystem-poc",
  "version": "1.0.0",
  "description": "Proof of concept for a graph-based, modular SOP management system using docs-as-code methodology",
  "main": "tools/build.js",
  "type": "module",
  "scripts": {
    "build": "node tools/build.js",
    "validate": "node tools/validate.js",
    "validate:schema": "node tools/schema-validator.js",
    "impact": "node tools/impact-analysis.js",
    "visualize": "node tools/visualize.js",
    "serve": "node tools/serve.js",
    "serve:enhanced": "node tools/serve-enhanced.js",
    "test": "node --test tests/*.test.js",
    "lint:md": "markdownlint 'sops/**/*.md' '*.md' --ignore node_modules --ignore dist",
    "lint:md:fix": "markdownlint --fix 'sops/**/*.md' '*.md' --ignore node_modules --ignore dist",
    "spellcheck": "cspell 'sops/**/*.md' '*.md'",
    "check:links": "node tools/check-links.js",
    "check:all": "npm run lint:md && npm run spellcheck && npm run validate && npm run validate:schema",
    "pdf:generate": "node tools/generate-pdf.js",
    "compliance:report": "node tools/compliance-report.js",
    "training:generate": "node tools/generate-training-quiz.js",
    "reports:all": "npm run compliance:report && npm run pdf:generate && npm run training:generate",
    "prepare": "husky",
    "start": "npm run serve:enhanced"
  },
  "keywords": [
    "sop",
    "documentation",
    "docs-as-code",
    "graph-database",
    "modular-documentation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "js-yaml": "^4.1.0",
    "marked": "^11.1.0",
    "neo4j-driver": "^6.0.1"
  },
  "devDependencies": {
    "cspell": "^8.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdown-link-check": "^3.12.1",
    "markdownlint-cli": "^0.39.0"
  },
  "lint-staged": {
    "sops/**/*.md": [
      "markdownlint --fix",
      "cspell"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  }
}
